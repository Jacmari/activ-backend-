{
  "info": {
    "_postman_id": "7d5f2d5a-7a2e-4e1e-9f10-a41d5f7d9e11",
    "name": "ACTIV Backend (Plaid) â€” Postman",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Drop-in backend for ACTIV. Set {{baseUrl}} to your Heroku app."
  },
  "item": [
    { "name": "Health",
      "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/ping", "host": ["{{baseUrl}}"], "path": ["ping"] } }
    },
    { "name": "Create Link Token",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"user_id\": \"default\",\n  \"products\": [\"transactions\",\"auth\",\"identity\",\"liabilities\",\"investments\"]\n}" },
        "url": { "raw": "{{baseUrl}}/plaid/link_token/create", "host": ["{{baseUrl}}"], "path": ["plaid","link_token","create"] }
      }
    },
    { "name": "Exchange Public Token",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"public_token\": \"REPLACE_WITH_PUBLIC_TOKEN\",\n  \"user_id\": \"default\"\n}" },
        "url": { "raw": "{{baseUrl}}/plaid/exchange_public_token", "host": ["{{baseUrl}}"], "path": ["plaid","exchange_public_token"] }
      }
    },
    { "name": "Balances",
      "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/plaid/balances?userId=default", "host": ["{{baseUrl}}"], "path": ["plaid","balances"], "query": [{ "key": "userId", "value": "default" }] } }
    },
    { "name": "Unlink",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{ \"user_id\": \"default\" }" },
        "url": { "raw": "{{baseUrl}}/plaid/unlink", "host": ["{{baseUrl}}"], "path": ["plaid","unlink"] }
      }
    },
    { "name": "Delete Account",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{ \"user_id\": \"default\" }" },
        "url": { "raw": "{{baseUrl}}/user/delete", "host": ["{{baseUrl}}"], "path": ["user","delete"] }
      }
    }
  ],
  "variable": [{ "key": "baseUrl", "value": "https://YOUR-HEROKU-APP.herokuapp.com" }]
}