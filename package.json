{
  "info": {
    "_postman_id": "7d5f2d5a-7a2e-4e1e-9f10-a41d5f7d9e11",
    "name": "ACTIV Backend (Plaid) — Postman Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "One-file backend endpoints for ACTIV. Import this into Postman. Set the `baseUrl` variable to your Heroku URL."
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{baseUrl}}/", "host": ["{{baseUrl}}"], "path": [""] }
      }
    },
    {
      "name": "Create Link Token",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"demo-user-1\",\n  \"products\": [\"transactions\",\"auth\",\"identity\",\"liabilities\",\"investments\"]\n}"
        },
        "url": { "raw": "{{baseUrl}}/plaid/link_token/create", "host": ["{{baseUrl}}"], "path": ["plaid", "link_token", "create"] }
      }
    },
    {
      "name": "Exchange Public Token",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"public_token\": \"REPLACE_WITH_PUBLIC_TOKEN\",\n  \"userId\": \"demo-user-1\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/plaid/exchange_public_token", "host": ["{{baseUrl}}"], "path": ["plaid", "exchange_public_token"] }
      }
    },
    {
      "name": "Accounts + Balances",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/plaid/accounts?userId=demo-user-1",
          "host": ["{{baseUrl}}"],
          "path": ["plaid", "accounts"],
          "query": [{ "key": "userId", "value": "demo-user-1" }]
        }
      }
    },
    {
      "name": "Balances (alias)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/plaid/balances?userId=demo-user-1",
          "host": ["{{baseUrl}}"],
          "path": ["plaid", "balances"],
          "query": [{ "key": "userId", "value": "demo-user-1" }]
        }
      }
    },
    {
      "name": "Transactions (date range)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/plaid/transactions?userId=demo-user-1&start=2025-06-01&end=2025-08-27",
          "host": ["{{baseUrl}}"],
          "path": ["plaid", "transactions"],
          "query": [
            { "key": "userId", "value": "demo-user-1" },
            { "key": "start", "value": "2025-06-01" },
            { "key": "end", "value": "2025-08-27" }
          ]
        }
      }
    },
    {
      "name": "Transactions Sync (incremental)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"demo-user-1\",\n  \"cursor\": null\n}"
        },
        "url": { "raw": "{{baseUrl}}/plaid/transactions/sync", "host": ["{{baseUrl}}"], "path": ["plaid", "transactions", "sync"] }
      }
    },
    {
      "name": "Liabilities",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/plaid/liabilities?userId=demo-user-1",
          "host": ["{{baseUrl}}"],
          "path": ["plaid", "liabilities"],
          "query": [{ "key": "userId", "value": "demo-user-1" }]
        }
      }
    },
    {
      "name": "Investments — Holdings",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/plaid/investments/holdings?userId=demo-user-1",
          "host": ["{{baseUrl}}"],
          "path": ["plaid", "investments", "holdings"],
          "query": [{ "key": "userId", "value": "demo-user-1" }]
        }
      }
    },
    {
      "name": "Investments — Transactions (date range)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/plaid/investments/transactions?userId=demo-user-1&start=2025-05-29&end=2025-08-27",
          "host": ["{{baseUrl}}"],
          "path": ["plaid", "investments", "transactions"],
          "query": [
            { "key": "userId", "value": "demo-user-1" },
            { "key": "start", "value": "2025-05-29" },
            { "key": "end", "value": "2025-08-27" }
          ]
        }
      }
    },
    {
      "name": "Auth (routing/account numbers)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/plaid/auth?userId=demo-user-1",
          "host": ["{{baseUrl}}"],
          "path": ["plaid", "auth"],
          "query": [{ "key": "userId", "value": "demo-user-1" }]
        }
      }
    },
    {
      "name": "Identity (account holder)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/plaid/identity?userId=demo-user-1",
          "host": ["{{baseUrl}}"],
          "path": ["plaid", "identity"],
          "query": [{ "key": "userId", "value": "demo-user-1" }]
        }
      }
    },
    {
      "name": "Item Info",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/plaid/item?userId=demo-user-1",
          "host": ["{{baseUrl}}"],
          "path": ["plaid", "item"],
          "query": [{ "key": "userId", "value": "demo-user-1" }]
        }
      }
    },
    {
      "name": "Item Remove",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"demo-user-1\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/plaid/item/remove", "host": ["{{baseUrl}}"], "path": ["plaid", "item", "remove"] }
      }
    },
    {
      "name": "Webhook (test receiver)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"webhook_type\": \"TRANSACTIONS\",\n  \"webhook_code\": \"SYNC_UPDATES_AVAILABLE\",\n  \"item_id\": \"test-item-id\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/plaid/webhook", "host": ["{{baseUrl}}"], "path": ["plaid", "webhook"] }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://YOUR-HEROKU-APP.herokuapp.com",
      "type": "string"
    }
  ]
}